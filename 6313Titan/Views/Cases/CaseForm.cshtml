@model _6313Titan.ViewModels.PortalCaseViewModel
@{
    ViewBag.Title = "CaseForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CaseForm</h2>
@using (Html.BeginForm("Save", "Cases"))
{
    @Html.ValidationSummary(true, "Please fix the following errors.")
    <div class="form-group">
        @Html.LabelFor(m => m.Case.Subject)
        @Html.TextBoxFor(m => m.Case.Subject, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Case.Subject)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Case.Description)
        @Html.TextBoxFor(m => m.Case.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Case.Description)
    </div>

    @Html.HiddenFor(m => m.Case.Id)
    @Html.HiddenFor(m => m.PortalId)
    <button type="submit" class="btn btn-primary">Save</button>
}