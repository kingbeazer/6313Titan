@model _6313Titan.ViewModels.PortalUserViewModel

@{
    ViewBag.Title = "Portalform";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cases</h2>
<p><a class="btn btn-outline-dark" style="width: 200px" onclick="location.href='@Url.Action( "New", "Cases", new { PortalId = Model.Portal.Id }, null)'">New Case &raquo;</a></p>

<table id="cases" class="table table-bordered">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Description</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#cases").DataTable({
                ajax: {
                    url: "../../api/cases",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "subject",
                        render: function (data, type, cases) {
                            return "<a href='/customers/edit/" + cases.id + "'>" + data + "</a>";
                        }
                    },
                    {
                        data: "description"
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class='btn-link js-delete' data-cases-id=" + data + ">Delete</button>";
                        }
                    }
                ]
            });


            $("#cases").on("click", ".js-delete", function () {
                var button = $(this);

                bootbox.confirm("Are you sure you want to delete this case?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/cases/" + button.attr("data-cases-id"),
                            method: "DELETE",
                            success: function () {
                                table.row(button.parents("tr")).remove().draw();
                            }
                        });
                    }
                });
            });
        });
    </script>
}